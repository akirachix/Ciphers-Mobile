<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C0033"
    tools:context=".activity.TeaserTwoActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="286dp"
        android:layout_height="241dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Keep track of your childâ€™s developmental  milestones with  TotoSteps"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imResources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/allweprovide" />

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/skip_button_background"
        android:fontFamily="@font/nunito_bold"
        android:text="Skip"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imResources" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="166dp"
        android:layout_height="52dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#F58220"
        android:fontFamily="@font/nunito_bold"
        android:text="Continue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSkip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnSkip" />
</androidx.constraintlayout.widget.ConstraintLayout>